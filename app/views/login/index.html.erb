<div class="container">
<div class="col-lg-8 col-lg-offset-2">
<% if flash[:alert] %>
  <p><%= flash[:alert] %></p>
<% end %>
<div class="page-header">
  <h1>Welcome to TalkBirdy!</h1>
</div>
  <div class="form-group login">
    <%= form_tag :action => :authorize do %>
      <%= text_field_tag :user, 'email', class: 'form-field' %><br>
      <%= password_field_tag :password, 'password', class: 'form-field' %><br>

      <%= submit_tag 'Login', class: 'form-button' %>

    <% end %>
  </div>
</div>
</div>