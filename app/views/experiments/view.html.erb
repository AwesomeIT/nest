<div class="page-view">
	<h1>Experiments</h1>
		<div class="page">
      <div>
        <h3>Create New</h3>
          <%= form_for(:experiment, :required => true, html: { multipart: true }) do |f| %>
            <table class="table table-striped table-bordered table-hover">
                <tr>
                    <td>Name</td>
                    <td><%=f.text_field :name, class: 'form-control' %></td>
                </tr>
            </table>
            <%= f.submit "Create", class: "btn btn-primary col-xs-2" %>
          <% end %>
      </div>
      <br/><br/>
      <div>
    		<h3>Your Experiments</h3>
    		<table id="table" >
    		    <thead>
    		    <tr>
    		        <th data-field="name">Name</th> 
                <th data-field="samples">Samples</th>   
    		    </tr>
    		    </thead>
    		</table>
      </div>
		</div>
</div>